<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1>Create a new team</h1>

      <%= simple_form_for @team do |f| %>
        <%= f.input :name %>
        <%= f.input :trekking, collection: 0..5 %>
        <%= f.input :mtb, collection: 0..5 %>
        <%= f.input :kayaking, collection: 0..5 %>
        <%= f.input :orienteering, collection: 0..5 %>
        <%= f.input :vertical, collection: 0..5 %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
